<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/tvUrl"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:hint="url"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/btnUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open in brower"
        app:layout_constraintEnd_toEndOf="@+id/tvUrl"
        app:layout_constraintStart_toStartOf="@+id/tvUrl"
        app:layout_constraintTop_toBottomOf="@+id/tvUrl" />

    <EditText
        android:id="@+id/tvPhone"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:hint="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUrl"
        />

    <Button
        android:id="@+id/btnPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPhone" />
    <EditText
        android:id="@+id/tvPhoneSms"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="phone sms"
        app:layout_constraintTop_toBottomOf="@id/btnPhone"/>
    <EditText
        android:id="@+id/tvBody"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="body sms"
        app:layout_constraintTop_toBottomOf="@id/tvPhoneSms"/>
    <Button
        android:id="@+id/btnSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBody" />

    <EditText
        android:id="@+id/tvText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="text"
        app:layout_constraintTop_toBottomOf="@id/btnSMS"/>
    <Button
        android:id="@+id/btnCopy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="copy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvText" />


    <SeekBar
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:progressTint="#7369F4"
        android:thumbTint="#7369F4"
        android:progress="30"
        app:layout_constraintEnd_toEndOf="@+id/tvText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvText"
        app:layout_constraintTop_toBottomOf="@+id/btnCopy" />

</androidx.constraintlayout.widget.ConstraintLayout>